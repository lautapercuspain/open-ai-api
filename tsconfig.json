{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "checkJs": true,
    "paths": {
      "app/*": ["app/*"],
      "@/styles/*": ["styles/*"],
      "@/components/*": ["app/components/*"],
      "@/lib/*": ["lib/*"],
      "#/ui/*": ["app/ui/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "adapters/harperdb.ts",
    ".next/types/**/*.ts",
    "pages/api/auth/[...nextauth].ts",
    "utils/confetti.js",
    ".contentlayer/generated",
    "app/api/chatImage/route.ts"
  ],
  "exclude": ["node_modules"]
}
